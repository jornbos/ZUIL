CREATE TABLE moderator(
MODID INTEGER NOT NULL,
ModNaam VARCHAR(255) NOT NULL,
ModMail VARCHAR(255) NOT NULL,
PRIMARY KEY(MODID)
);

CREATE TABLE station(
Stationnaam VARCHAR(255) NOT NULL,
Plaats VARCHAR(255) NOT NULL,
Weer VARCHAR(255) NOT NULL,
PRIMARY KEY(Stationnaam)
);

CREATE TABLE bericht(
BerichtID INTEGER NOT NULL,
Bericht VARCHAR(140) NOT NULL,
Naam VARCHAR(255) NOT NULL,
Datum DATE NOT NULL,
Tijd DATE NOT NULL,
Goedgekeurd_door VARCHAR(255) NOT NULL,
Goedgekeurd_tijd TIME NOT NULL,
MODID INTEGER NOT NULL,
Stationnaam VARCHAR(255) NOT NULL)
PRIMARY KEY(BerichtID)
FOREIGN KEY (MODID) REFERENCES moderator(MODID),
FOREIGN KEY (Stationaam) REFERENCES station(stationnaam)
);
